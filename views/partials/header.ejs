    <script>
      $(document).ready(function() {
        // Get the current URL path and select the corresponding tab
        var path = window.location.pathname;
        $(".nav-link").each(function() {
          if ($(this).attr('href') === path) {
            $(this).addClass('active');
            $(this).css("color", "black").css("border", "2px solid white").css("border-radius", "5px").css("background-color", "white")
          }
        });
    
        // Add click event listener to the navigation links
        $(".nav-link").on("click", function() {
          // Remove the 'active' class from all navigation links
          $(".nav-link").removeClass("active");
          // Add the 'active' class to the clicked navigation link
          $(this).addClass("active");
        
        });
      });
    </script>
    